@using lab4.ViewModels
@model TreatmentsViewModel
@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="data-search">
        @using (Html.BeginForm("Index", "Treatment", FormMethod.Post))
        {
            <fieldset>
                Название болезни: @Html.TextBox("TreatmentDisease", Model.TreatmentViewModel.TreatmentDisease)
                <input type="submit" value="Найти" />
            </fieldset>
        }
    </div>
    <div>
        Лечения
        <table>
            <tr>
                <td><a asp-controller="Treatment" asp-action="Index" asp-route-sortOrder="@ViewBag.NameSort">Название болезни</a></td>
                <td>Название лекарства</td>
                <td>Продолжительность лечения</td>
            </tr>
            @foreach (Treatment i in Model.PageViewModel)
            {
                <tr>
                    <td>@i.TreatmentDisease</td>
                    <td>@i.TreatmentMedication</td>
                    <td>@i.TreatmentDurationOfTreatment</td>
                </tr>
            }
        </table>
        <div>
            <a asp-controller="Treatment" asp-action="Index" asp-route-index="-1">
                <<
            </a>
            @(Model.PageNumber + 1)
            <a asp-controller="Treatment" asp-action="Index" asp-route-index="1">
                >>
            </a>
        </div>
    </div>
</div>
